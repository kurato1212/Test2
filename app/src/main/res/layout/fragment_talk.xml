<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TalkFragment">

    <Button
        android:id="@+id/angryButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/teal_200"
        android:text="怒る"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/persuadeButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/teal_200"
        android:text="説得"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/praiseButton"
        app:layout_constraintStart_toEndOf="@+id/angryButton" />

    <Button
        android:id="@+id/praiseButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/teal_200"
        android:text="褒める"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>